@{
    ViewData["Title"] = "Thanh toán thất bại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option" style="background-color: #f8f9fa; padding: 15px 0; border-bottom: 1px solid #ddd;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0" style="background: none; padding: 0; margin: 0;">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index" style="color: #007bff; text-decoration: none;">
                                <i class="fa fa-home"></i> Trang chủ
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page" style="color: #6c757d;">Thanh toán thất bại</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cancelled Order Section Begin -->
<section class="thank-you spad" style="padding: 60px 0; background-color: #fff6f6;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="thank-you__content text-center p-5" style="border: 1px solid #f5c6cb; border-radius: 15px; background-color: #fff0f0; box-shadow: 0 4px 12px rgb(245 198 203 / 0.5);">
                    <div class="thank-you__icon text-danger mb-4">
                        <i class="fa fa-times-circle fa-5x"></i>
                    </div>
                    <h2 class="mb-3" style="font-weight: 700; color: #c82333;">Đơn hàng đã bị hủy!</h2>
                    <p class="mb-4" style="font-size: 1.1rem; color: #721c24;">
                        Thanh toán của bạn không thành công hoặc đã bị hủy.<br />
                        Vui lòng thử lại hoặc liên hệ với chúng tôi nếu cần hỗ trợ.
                    </p>
                    <a asp-controller="Home" asp-action="Index" class="site-btn" style="background-color: #c82333; color: #fff; padding: 12px 35px; border-radius: 30px; font-weight: 600; display: inline-block; transition: background-color 0.3s;">
                        Quay lại trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Cancelled Order Section End -->
