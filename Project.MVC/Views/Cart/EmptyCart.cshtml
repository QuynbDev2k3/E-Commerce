@{
    ViewData["Title"] = "Empty Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i>Trang Chủ</a>
                    <span>Giỏ Hàng</span>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="shop-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="empty-cart">
                    <i class="fa fa-shopping-cart fa-5x mb-3"></i>
                    <h3>Giỏ hàng của bạn đang trống</h3>
                    <p class="mb-4">Hãy thêm một số sản phẩm vào giỏ hàng của bạn</p>
                    <a asp-controller="Product" asp-action="Index" class="primary-btn">Tiếp tục mua sắm</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .empty-cart {
        padding: 50px 0;
    }
    .empty-cart i {
        color: #ca1515;
        margin-bottom: 20px;
    }
    .empty-cart h3 {
        font-size: 24px;
        margin-bottom: 15px;
    }
    .empty-cart p {
        color: #666;
        margin-bottom: 30px;
    }
</style> 