@using Project.Common
@using Project.MvcModule.Model
@model BlockProductsByFilterViewModel
<div class="trend__content">
    <div class="section-title">
        <h4>Xu hướng hot</h4>
    </div>
    @foreach(var item in Model.ProductsPagination.Content)
    {
        <div class="trend__item">
            <div class="trend__item__pic" style="max-width: 90px; max-height: 90px;">
                <img src="@item.ImageUrl" alt="">
            </div>
            <div class="trend__item__text">
                <h6>@item.Name</h6>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </div>
                <div class="product__price">@item.MetadataObj.GetMetadatavalue("MaxPrice")</div>
            </div>
        </div>
    }
  </div>