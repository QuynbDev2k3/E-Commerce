@model Project.MvcModule.Model.BlockProductsByFilterViewModel
<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-4">
            <div class="section-title">
                <h4>Sản phẩm mới</h4>
            </div>
        </div>
        <div class="col-lg-8 col-md-8">
            <ul class="filter__controls">
                @* <li class="active" data-filter="*">Tất cả</li> *@
                @* <li data-filter=".running">Chạy bộ</li> *@
                @* <li data-filter=".basketball">Bóng rổ</li> *@
                @* <li data-filter=".tennis">Tennis</li> *@
                @* <li data-filter=".gym">Tập gym</li> *@
            </ul>
        </div>
    </div>
    <div class="row property__gallery">

        @foreach(var product in Model.ProductsPagination.Content)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mix running">
                @await Component.InvokeAsync("BlockProductDetail",product)
            </div>
        }
    </div>
</div>